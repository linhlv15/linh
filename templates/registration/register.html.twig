{% extends 'login.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container py-5 h-100">
        <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
            <li class="nav-item" role="presentation" >
                <a class="nav-link active" id="tab-login" style="color: chartreuse" data-mdb-toggle="pill" href="{{ path('app_login') }}" role="tab"
                   aria-controls="pills-login" aria-selected="true">Login</a>
            </li>
            <li class="nav-item" role="presentation" style="background: chartreuse">
                <a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="{{ path('app_register') }}" role="tab"
                   aria-controls="pills-register" aria-selected="false">Register</a>
            </li>
        </ul>

        {{ form_start(registrationForm) }}

        <!-- Username input -->

        <div class="card" style="padding: 15px" >
            <!-- Email input -->
            <div class="form-outline mb-4">
                <div class="form-group">
                    {{ form_row(registrationForm.email, {'attr':{'class':'form-control'}}) }}
                </div>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword,{'attr':{'class':'form-control'}},) }}
                </div>

                <!-- Checkbox -->

                <label class="form-check-label" for="registerCheck">
                    {{ form_row(registrationForm.agreeTerms) }}
                </label>
            </div>
            <button type="submit" class="btn btn-lg btn-success">Register</button>
            {{ form_end(registrationForm) }}

            <!-- Submit button -->

        </div>
    </div>
    </div>
{% endblock %}
