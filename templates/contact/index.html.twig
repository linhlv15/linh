{% extends 'contact.html.twig' %}
{% block body %}
<div class="container py-5 h-100">
    <p class="text-center " style="padding-top: 90px">CONTACT</p>
    <div class="card" style="padding: 15px; border: 1px solid #221122" >
        {{ form_start(form) }}
        <div class="form-group">
            <label for="name">Name</label>
            {{ form_widget(form.name,{
                'attr':{
                    'class':'form-control'
                }
            }) }}
        </div>
        <div class="form-group">
            <label for="area">Email:</label>
            {{ form_widget(form.email,{
                'attr':{
                    'class':'form-control',
                    'placeholder': 'email'
                }
            }) }}
        </div>
        <div class="form-group">
            <label for="area">Description:</label>
            {{ form_widget(form.description,{
                'attr':{
                    'class':'form-control',
                    'placeholder': 'description'
                }
            }) }}

            <input type="submit" name="Submit" value="Submit" class="btn btn-primary"/>
            {{ form_end(form) }}
        </div>
    </div>
    {% endblock %}

